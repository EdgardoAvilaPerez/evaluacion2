<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dev4u.hv.guia1_moviles.MainActivity">

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:gravity="end"
            android:text="1+1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblEntrada" />

        <TextView
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:id="@+id/lblResultado"
            android:gravity="end"
            android:text="=20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:text="AC"
                    android:padding="10dp"
                    android:layout_margin="2dp"/>

                <Button

                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="4"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="7"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/btnpa1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="("
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/btnDEL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:text="DEL"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="2"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="5"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="8"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/btnpa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text=")"
                    android:layout_margin="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSUM"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="3"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="6"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="9"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="."
                    android:layout_margin="2dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnRES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:text="-"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btnPOR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:text="*"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btnENTRE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:text="/"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/btnIGUAL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorAccent"
                    android:text="="
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="2dp"
                    android:background="@drawable/boton_redondo"
                    android:backgroundTint="@color/colorPrimary"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>